@model IEnumerable<Test.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student List</h1>

<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="Upsert">Create New</a>
</p>

<p style="text-align:right;margin-right:20px;">
    @using (Html.BeginForm("Filter", "Student", FormMethod.Post))
    {
        <input type="text" name="str" />
        <input type="submit" value="Search"/>

    @Html.ActionLink("Clear", "Index", "Student")
    }
</p>
<div class="table-responsive border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RollNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Percentage)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RollNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Percentage)
                        </td>
                        <td>
                            <a asp-action="Upsert" class="btn btn-outline-primary" asp-route-Id="@item.Id">Edit</a>
                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@item.Id">Delete</a>                       
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>